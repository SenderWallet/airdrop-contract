    "commander": "8.3.0",
    "eslint": "8.7.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.25.4",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-simple-import-sort": "7.0.0",
    "jest": "27.4.7",
    "nanoid": "3.2.0",
    "near-api-js": "0.44.2",
    "ts-jest": "27.1.3",
    "ts-node": "10.4.0",
